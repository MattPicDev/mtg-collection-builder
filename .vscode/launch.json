{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start MTG Collection Builder",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": []
        },
        {
            "name": "Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "test_app.py",
                "-v"
            ],
            "console": "integratedTerminal"
        }
    ]
}
